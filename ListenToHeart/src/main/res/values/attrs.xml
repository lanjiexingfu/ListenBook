<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomRadioButton">
        <!-- 设置top图片的宽度 -->
        <attr name="custom_drawableTopWith" format="dimension" />
        <!-- 设置top图片的高度 -->
        <attr name="custom_drawableTopHeight" format="dimension" />
        <attr name="custom_drawableBottomWith" format="dimension" />
        <attr name="custom_drawableBottomHeight" format="dimension" />
        <attr name="custom_drawableRightWith" format="dimension" />
        <attr name="custom_drawableRightHeight" format="dimension" />
        <attr name="custom_drawableLeftWith" format="dimension" />
        <attr name="custom_drawableLeftHeight" format="dimension" />
        <!-- 设置top的图片资源 -->
        <attr name="custom_drawableTop" format="reference" />
        <attr name="custom_drawableBottom" format="reference" />
        <attr name="custom_drawableRight" format="reference" />
        <attr name="custom_drawableLeft" format="reference" />
    </declare-styleable>

</resources>