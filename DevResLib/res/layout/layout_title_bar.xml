<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:background="@color/title_green_bg"
              android:gravity="center"
              android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/title_bar_left_layout"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        >

        <ImageView
            android:id="@+id/title_bar_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/title_bar_left_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:textColor="#9a9a9a"
            android:textSize="@dimen/text_size_l"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/title_bar_left_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_red_point"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_bar_title_show"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xl"/>

    <RelativeLayout
        android:id="@+id/title_bar_right_layout"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/title_bar_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:scaleType="centerInside"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/title_bar_right_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center_vertical|right"
            android:text="编辑"
            android:textColor="#9a9a9a"
            android:textSize="@dimen/text_size_l"/>

        <ImageView
            android:id="@+id/title_bar_right_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_red_point"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>